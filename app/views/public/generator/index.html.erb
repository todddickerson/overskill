<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800">
  <!-- Simple Hero Section -->
  <div class="container mx-auto px-4 py-12 md:py-20">
    <div class="text-center mb-12">
      <h1 class="text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-4">
        Build Your App in Minutes
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        Describe your idea or choose a starter template. We'll build a production-ready app with AI.
      </p>
    </div>

    <!-- Custom Prompt Input -->
    <div class="max-w-3xl mx-auto mb-12">
      <%= form_with url: generator_index_path, 
                    method: :post,
                    data: { 
                      turbo_frame: @user_signed_in ? "_top" : "auth_modal",
                      controller: "generator",
                      generator_user_signed_in_value: @user_signed_in.to_s
                    },
                    class: "bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-6" do |f| %>
        
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Describe your app idea
          </label>
          <%= text_area_tag :custom_prompt, nil,
              placeholder: "I want to build an app that...",
              class: "textarea-control resize-none",
              rows: 5,
              id: "custom-prompt",
              data: { generator_target: "prompt" } %>
        </div>
        
        <button type="submit"
                class="w-full btn-primary py-3"
                id="generate-btn">
          🚀 Generate My App
        </button>
      <% end %>
    </div>



    <!-- Divider -->
    <div class="max-w-3xl mx-auto mb-12">
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300 dark:border-gray-600"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-gradient-to-br from-blue-50 to-indigo-100 
                       dark:from-gray-900 dark:to-gray-800 
                       text-gray-500 dark:text-gray-400">
            Or choose a starter template
          </span>
        </div>
      </div>
    </div>

    <!-- Starter Templates Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto" data-controller="generator">
      <% @starter_prompts.each do |template| %>
        <% if template[:prompt] %>
          <button type="button"
                  data-action="click->generator#fillPrompt"
                  data-prompt="<%= template[:prompt] %>"
                  class="w-full text-left bg-white dark:bg-gray-800 rounded-xl shadow-lg 
                         hover:shadow-xl transform transition hover:scale-[1.02] p-6
                         border border-gray-200 dark:border-gray-700">
            <div class="flex items-start space-x-4">
              <div class="text-4xl">
                <%= template[:icon] %>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">
                  <%= template[:title] %>
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  <%= template[:description] %>
                </p>
              </div>
            </div>
          </button>
        <% else %>
          <!-- Custom App Card -->
          <div class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-700 
                      rounded-xl shadow-lg p-6 border-2 border-dashed border-gray-300 dark:border-gray-600
                      cursor-pointer hover:border-blue-500 transition"
               onclick="document.getElementById('custom-prompt').focus()">
            <div class="flex items-start space-x-4">
              <div class="text-4xl">
                <%= template[:icon] %>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-1">
                  <%= template[:title] %>
                </h3>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  <%= template[:description] %>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Features Section -->
    <div class="mt-20 text-center">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
        Every App Includes
      </h2>
      <div class="grid md:grid-cols-3 lg:grid-cols-6 gap-6 max-w-6xl mx-auto">
        <div class="text-center">
          <div class="text-3xl mb-2">🔐</div>
          <div class="font-semibold text-gray-900 dark:text-white">Secure Auth</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Social logins & MFA</div>
        </div>
        <div class="text-center">
          <div class="text-3xl mb-2">💳</div>
          <div class="font-semibold text-gray-900 dark:text-white">Payments</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Stripe integration</div>
        </div>
        <div class="text-center">
          <div class="text-3xl mb-2">📱</div>
          <div class="font-semibold text-gray-900 dark:text-white">Mobile Ready</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Responsive PWA</div>
        </div>
        <div class="text-center">
          <div class="text-3xl mb-2">⚡</div>
          <div class="font-semibold text-gray-900 dark:text-white">Real-time</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Live updates</div>
        </div>
        <div class="text-center">
          <div class="text-3xl mb-2">🗄️</div>
          <div class="font-semibold text-gray-900 dark:text-white">Database</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Secure data storage</div>
        </div>
        <div class="text-center relative">
          <div class="text-3xl mb-2">🏢</div>
          <div class="font-semibold text-gray-900 dark:text-white">Enterprise OAuth</div>
          <div class="text-sm text-gray-600 dark:text-gray-400">Org SSO support</div>
          <span class="absolute -top-2 -right-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white text-xs px-2 py-1 rounded-full">
            Coming Soon
          </span>
        </div>
      </div>
    </div>
  </div>
</div>



<!-- Include Auth Modal -->
<%= render 'shared/auth_modal' %>