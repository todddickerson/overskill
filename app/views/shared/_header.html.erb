<header class="bg-white border-b border-gray-200 sticky top-0 z-40">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between">
      <!-- Logo and primary navigation -->
      <div class="flex">
        <!-- Logo -->
        <div class="flex flex-shrink-0 items-center">
          <%= link_to root_path, class: "flex items-center space-x-3 group" do %>
            <%= image_tag "overskill-logo.svg", alt: "Overskill", class: "h-10 w-10 rounded-md shadow-sm group-hover:shadow-md transition-shadow" %>
            <span class="text-xl font-bold text-gray-900 group-hover:text-primary-600 transition-colors">
              Overskill
            </span>
          <% end %>
        </div>

        <!-- Desktop navigation -->
        <div class="hidden sm:ml-8 sm:flex sm:space-x-6">
          <% if user_signed_in? %>
            <%= link_to "My Apps", account_apps_path,
                class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(account_apps_path) ? 'border-b-2 border-primary-500 text-gray-900' : 'text-gray-500 hover:text-gray-900 hover:border-b-2 hover:border-gray-300'} transition-colors" %>
            <%= link_to "Create App", generator_index_path,
                class: "inline-flex items-center px-1 pt-1 text-sm font-medium #{current_page?(generator_index_path) ? 'border-b-2 border-primary-500 text-gray-900' : 'text-gray-500 hover:text-gray-900 hover:border-b-2 hover:border-gray-300'} transition-colors" %>
            <%= link_to "Marketplace", "#",
                class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-gray-900 hover:border-b-2 hover:border-gray-300 transition-colors" %>
          <% else %>
            <%= link_to "Features", "#features",
                class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-gray-900 hover:border-b-2 hover:border-gray-300 transition-colors" %>
            <%= link_to "Pricing", "#pricing",
                class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-gray-900 hover:border-b-2 hover:border-gray-300 transition-colors" %>
            <%= link_to "How it Works", "#how-it-works",
                class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-gray-500 hover:text-gray-900 hover:border-b-2 hover:border-gray-300 transition-colors" %>
          <% end %>
        </div>
      </div>

      <!-- Right side items -->
      <div class="flex items-center">
        <% if user_signed_in? %>
          <!-- Notifications (future feature) -->
          <button type="button" class="relative rounded-full bg-white p-1 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
            <span class="sr-only">View notifications</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
            </svg>
          </button>

          <!-- Profile dropdown -->
          <div class="relative ml-3" data-controller="dropdown">
            <button type="button" 
                    class="flex rounded-full bg-white text-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
                    data-action="click->dropdown#toggle click@window->dropdown#hide"
                    data-dropdown-target="button">
              <span class="sr-only">Open user menu</span>
              <div class="h-8 w-8 rounded-full bg-primary-100 flex items-center justify-center">
                <span class="text-primary-700 font-medium text-sm">
                  <%= current_user.email.first.upcase %>
                </span>
              </div>
            </button>

            <!-- Dropdown menu -->
            <div class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
                 data-dropdown-target="menu"
                 data-transition-enter="transition ease-out duration-100"
                 data-transition-enter-start="transform opacity-0 scale-95"
                 data-transition-enter-end="transform opacity-100 scale-100"
                 data-transition-leave="transition ease-in duration-75"
                 data-transition-leave-start="transform opacity-100 scale-100"
                 data-transition-leave-end="transform opacity-0 scale-95">
              
              <%= link_to account_teams_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                <div class="flex items-center">
                  <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  Your Profile
                </div>
              <% end %>
              
              <%= link_to account_apps_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                <div class="flex items-center">
                  <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" />
                  </svg>
                  My Apps
                </div>
              <% end %>
              
              <div class="border-t border-gray-100"></div>
              
              <%= link_to destroy_user_session_path, method: :delete, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                <div class="flex items-center">
                  <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75" />
                  </svg>
                  Sign out
                </div>
              <% end %>
            </div>
          </div>
        <% else %>
          <%= link_to "Sign in", new_user_session_path,
              class: "btn-ghost" %>
          <%= link_to "Get Started", generator_index_path,
              class: "ml-2 btn-primary" %>
        <% end %>

        <!-- Mobile menu button -->
        <div class="flex items-center sm:hidden ml-2">
          <button type="button" 
                  class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500"
                  data-controller="mobile-menu"
                  data-action="click->mobile-menu#toggle">
            <span class="sr-only">Open main menu</span>
            <!-- Hamburger icon -->
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" data-mobile-menu-target="hamburger">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
            <!-- Close icon -->
            <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" data-mobile-menu-target="close">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div class="hidden sm:hidden" data-mobile-menu-target="panel">
    <div class="space-y-1 pb-3 pt-2">
      <% if user_signed_in? %>
        <%= link_to "My Apps", account_apps_path,
            class: "block border-l-4 #{current_page?(account_apps_path) ? 'border-primary-500 bg-primary-50 text-primary-700' : 'border-transparent text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700'} py-2 pl-3 pr-4 text-base font-medium" %>
        <%= link_to "Create App", generator_index_path,
            class: "block border-l-4 #{current_page?(generator_index_path) ? 'border-primary-500 bg-primary-50 text-primary-700' : 'border-transparent text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700'} py-2 pl-3 pr-4 text-base font-medium" %>
        <%= link_to "Marketplace", "#",
            class: "block border-l-4 border-transparent text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700 py-2 pl-3 pr-4 text-base font-medium" %>
      <% else %>
        <%= link_to "Features", "#features",
            class: "block border-l-4 border-transparent text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700 py-2 pl-3 pr-4 text-base font-medium" %>
        <%= link_to "Pricing", "#pricing",
            class: "block border-l-4 border-transparent text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700 py-2 pl-3 pr-4 text-base font-medium" %>
        <%= link_to "How it Works", "#how-it-works",
            class: "block border-l-4 border-transparent text-gray-500 hover:border-gray-300 hover:bg-gray-50 hover:text-gray-700 py-2 pl-3 pr-4 text-base font-medium" %>
      <% end %>
    </div>
    
    <div class="border-t border-gray-200 pb-3 pt-4">
      <% if user_signed_in? %>
        <div class="flex items-center px-4">
          <div class="flex-shrink-0">
            <div class="h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
              <span class="text-primary-700 font-medium text-lg">
                <%= current_user.email.first.upcase %>
              </span>
            </div>
          </div>
          <div class="ml-3">
            <div class="text-base font-medium text-gray-800"><%= current_user.email %></div>
          </div>
        </div>
        <div class="mt-3 space-y-1">
          <%= link_to "Your Profile", account_teams_path,
              class: "block px-4 py-2 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-800" %>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete,
              class: "block px-4 py-2 text-base font-medium text-gray-500 hover:bg-gray-100 hover:text-gray-800" %>
        </div>
      <% else %>
        <div class="space-y-1 px-4">
          <%= link_to "Sign in", new_user_session_path,
              class: "block rounded-md bg-gray-100 px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-200" %>
          <%= link_to "Get Started", generator_index_path,
              class: "block rounded-md bg-primary-500 px-3 py-2 text-base font-medium text-white hover:bg-primary-600" %>
        </div>
      <% end %>
    </div>
  </div>
</header>