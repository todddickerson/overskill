<!-- Authentication Modal -->
<%= turbo_frame_tag "auth_modal" do %>
  <% if local_assigns[:show] %>
    <div data-controller="auth-modal" 
         data-auth-modal-show-value="true"
         data-auth-modal-prompt-value="<%= local_assigns[:prompt] || '' %>"
         data-action="click->auth-modal#handleBackdropClick"
         class="fixed inset-0 z-50 overflow-y-auto"
         aria-labelledby="modal-title" 
         role="dialog" 
         aria-modal="true">
  <% else %>
    <div data-controller="auth-modal" 
         class="hidden">
  <% end %>
  
  <!-- Background backdrop -->
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

  <!-- Modal panel -->
  <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
    <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
      
      <!-- Header -->
      <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold leading-6 text-gray-900" id="modal-title">
            Sign in to create your app
          </h3>
          <button type="button" 
                  data-action="click->auth-modal#close"
                  class="rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none">
            <span class="sr-only">Close</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <!-- Tabs -->
        <div class="border-b border-gray-200">
          <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            <button data-auth-modal-target="loginTab"
                    data-action="click->auth-modal#switchToLogin"
                    class="<%= local_assigns[:show_signup] ? 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700' : 'border-primary-500 text-primary-600' %> whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium">
              Sign In
            </button>
            <button data-auth-modal-target="signupTab"
                    data-action="click->auth-modal#switchToSignup"
                    class="<%= local_assigns[:show_signup] ? 'border-primary-500 text-primary-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700' %> whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium">
              Sign Up
            </button>
          </nav>
        </div>

        <!-- Error Message -->
        <% if local_assigns[:error].present? %>
          <div data-auth-modal-target="errorMessage" 
               class="mt-4 rounded-md bg-red-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-red-800"><%= error %></p>
              </div>
            </div>
          </div>
        <% end %>
        
        <!-- Success/Notice Message -->
        <% if local_assigns[:notice].present? %>
          <div class="mt-4 rounded-md bg-green-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-green-800"><%= notice %></p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Login Form -->
        <div data-auth-modal-target="loginForm" class="mt-6 <%= local_assigns[:show_signup] ? 'hidden' : '' %>">
          <%= form_with scope: :user,
                        url: user_session_path, 
                        local: true,
                        data: { turbo_frame: "auth_modal" },
                        class: "space-y-4" do |f| %>
            
            <div>
              <label for="login_email" class="block text-sm font-medium text-gray-700">
                Email
              </label>
              <div class="mt-1">
                <%= f.email_field :email, 
                                  id: "login_email",
                                  required: true,
                                  autofocus: true,
                                  value: (local_assigns[:email] || cookies.encrypted[:pre_auth_email]).to_s,
                                  autocomplete: "email",
                                  class: "form-control" %>
              </div>
            </div>

            <div>
              <label for="login_password" class="block text-sm font-medium text-gray-700">
                Password
              </label>
              <div class="mt-1">
                <%= f.password_field :password,
                                     id: "login_password", 
                                     required: true,
                                     autocomplete: "current-password",
                                     class: "form-control" %>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-primary-600 focus:ring-primary-500" %>
                <label for="user_remember_me" class="ml-2 block text-sm text-gray-900">
                  Remember me
                </label>
              </div>

              <div class="text-sm">
                <%= link_to "Forgot password?", new_user_password_path, class: "font-medium text-gray-600 hover:text-gray-900" %>
              </div>
            </div>

            <div>
              <%= f.submit "Sign in", class: "w-full btn-primary py-2" %>
            </div>
          <% end %>

          <div class="mt-6">
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-300"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="bg-white px-2 text-gray-500">Or continue with</span>
              </div>
            </div>

            <div class="mt-6 grid grid-cols-2 gap-3">
              <%= link_to user_google_oauth2_omniauth_authorize_path, 
                          method: :post,
                          data: { turbo: false },
                          class: "inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-gray-600 shadow-sm ring-1 ring-inset ring-gray-200 hover:bg-gray-50 focus:outline-offset-0" do %>
                <svg class="h-5 w-5" viewBox="0 0 24 24">
                  <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                <span class="ml-2">Google</span>
              <% end %>

              <%= link_to user_github_omniauth_authorize_path,
                          method: :post,
                          data: { turbo: false },
                          class: "inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-gray-600 shadow-sm ring-1 ring-inset ring-gray-200 hover:bg-gray-50 focus:outline-offset-0" do %>
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
                </svg>
                <span class="ml-2">GitHub</span>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Signup Form -->
        <div data-auth-modal-target="signupForm" class="mt-6 <%= local_assigns[:show_signup] ? '' : 'hidden' %>">
          <%= form_with scope: :user,
                        url: user_registration_path,
                        local: true,
                        data: { turbo_frame: "auth_modal" },
                        class: "space-y-4" do |f| %>
            
            <div>
              <label for="signup_email" class="block text-sm font-medium text-gray-700">
                Email
              </label>
              <div class="mt-1">
                <%= f.email_field :email,
                                  id: "signup_email", 
                                  required: true,
                                  autofocus: true,
                                  value: (local_assigns[:email] || cookies.encrypted[:pre_auth_email]).to_s,
                                  autocomplete: "email",
                                  class: "form-control" %>
              </div>
            </div>

            <div>
              <label for="signup_password" class="block text-sm font-medium text-gray-700">
                Password
              </label>
              <div class="mt-1">
                <%= f.password_field :password,
                                     id: "signup_password",
                                     required: true,
                                     autocomplete: "new-password",
                                     class: "form-control" %>
              </div>
              <p class="mt-1 text-sm text-gray-500">
                At least 6 characters
              </p>
            </div>

            <div>
              <label for="signup_password_confirmation" class="block text-sm font-medium text-gray-700">
                Confirm Password
              </label>
              <div class="mt-1">
                <%= f.password_field :password_confirmation,
                                     id: "signup_password_confirmation",
                                     required: true,
                                     autocomplete: "new-password",
                                     class: "form-control" %>
              </div>
            </div>

            <div>
              <%= f.submit "Create account",
                           class: "flex w-full justify-center rounded-md bg-primary-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600" %>
            </div>
          <% end %>

          <div class="mt-6">
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-300"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="bg-white px-2 text-gray-500">Or sign up with</span>
              </div>
            </div>

            <div class="mt-6 grid grid-cols-2 gap-3">
              <%= link_to user_google_oauth2_omniauth_authorize_path,
                          method: :post,
                          data: { turbo: false },
                          class: "inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-gray-500 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:outline-offset-0" do %>
                <svg class="h-5 w-5" viewBox="0 0 24 24">
                  <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                  <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                  <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                  <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
                <span class="ml-2">Google</span>
              <% end %>

              <%= link_to user_github_omniauth_authorize_path,
                          method: :post,
                          data: { turbo: false },
                          class: "inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-gray-500 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:outline-offset-0" do %>
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
                </svg>
                <span class="ml-2">GitHub</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>