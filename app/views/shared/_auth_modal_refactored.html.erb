<!-- Authentication Modal using Bullet Train forms -->
<%= turbo_frame_tag "auth_modal" do %>
  <% if local_assigns[:show] %>
    <div data-controller="auth-modal" 
         data-auth-modal-show-value="true"
         data-auth-modal-prompt-value="<%= local_assigns[:prompt] || '' %>"
         data-action="click->auth-modal#handleBackdropClick"
         class="fixed inset-0 z-50 overflow-y-auto"
         aria-labelledby="modal-title" 
         role="dialog" 
         aria-modal="true">
  <% else %>
    <div data-controller="auth-modal" 
         class="hidden">
  <% end %>
  
  <!-- Background backdrop -->
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>

  <!-- Modal panel -->
  <div class="flex min-h-full items-center justify-center p-4 text-center sm:p-0">
    <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
      
      <!-- Close button -->
      <div class="absolute right-0 top-0 pr-4 pt-4">
        <button type="button" 
                data-action="click->auth-modal#close"
                class="rounded-md bg-white text-gray-400 hover:text-gray-500 focus:outline-none">
          <span class="sr-only">Close</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Modal content using Bullet Train box component -->
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-semibold leading-6 text-gray-900 mb-4" id="modal-title">
          <%= t('devise.headers.sign_in') %>
        </h3>

        <!-- Tabs -->
        <div class="border-b border-gray-200 mb-6">
          <nav class="-mb-px flex space-x-8" aria-label="Tabs">
            <button data-auth-modal-target="loginTab"
                    data-action="click->auth-modal#switchToLogin"
                    class="<%= local_assigns[:show_signup] ? 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700' : 'border-yellow-500 text-yellow-600' %> whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium">
              Sign In
            </button>
            <% if show_sign_up_options? %>
              <button data-auth-modal-target="signupTab"
                      data-action="click->auth-modal#switchToSignup"
                      class="<%= local_assigns[:show_signup] ? 'border-yellow-500 text-yellow-600' : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700' %> whitespace-nowrap border-b-2 py-2 px-1 text-sm font-medium">
                Sign Up
              </button>
            <% end %>
          </nav>
        </div>

        <!-- Login Form -->
        <div data-auth-modal-target="loginForm" class="<%= local_assigns[:show_signup] ? 'hidden' : '' %>">
          <%= render 'devise/shared/sign_in_form',
                     resource: User.new,
                     resource_name: :user,
                     form_id: 'modal_login_form',
                     turbo: true,
                     turbo_frame: 'auth_modal',
                     hide_signup_link: true %>
        </div>

        <!-- Signup Form -->
        <% if show_sign_up_options? %>
          <div data-auth-modal-target="signupForm" class="<%= local_assigns[:show_signup] ? '' : 'hidden' %>">
            <%= render 'devise/registrations/form',
                       resource: User.new,
                       resource_name: :user,
                       form_id: 'modal_signup_form',
                       turbo: true,
                       turbo_frame: 'auth_modal' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>