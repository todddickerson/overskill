<%# User-friendly error panel with recovery suggestions %>
<div class="rounded-lg border-2 border-red-200 dark:border-red-800 bg-red-50 dark:bg-red-900/20 p-4"
     data-controller="error-panel"
     data-error-panel-show-technical-value="<%= show_technical %>">
  
  <%# Error header %>
  <div class="flex items-start space-x-3">
    <div class="flex-shrink-0">
      <svg class="w-6 h-6 text-red-500 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
      </svg>
    </div>
    
    <div class="flex-1">
      <%# User-friendly message %>
      <h3 class="text-base font-semibold text-red-900 dark:text-red-100">
        Something went wrong
      </h3>
      <p class="mt-1 text-sm text-red-700 dark:text-red-300">
        <%= message %>
      </p>
      
      <%# Recovery suggestions %>
      <% if suggestions.any? %>
        <div class="mt-3">
          <h4 class="text-sm font-medium text-red-900 dark:text-red-100 mb-2">
            Try these solutions:
          </h4>
          <ul class="space-y-1">
            <% suggestions.each_with_index do |suggestion, index| %>
              <li class="flex items-start space-x-2">
                <span class="text-red-600 dark:text-red-400 text-sm font-medium"><%= index + 1 %>.</span>
                <span class="text-sm text-red-700 dark:text-red-300"><%= suggestion %></span>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <%# Action buttons %>
      <div class="mt-4 flex items-center space-x-3">
        <button class="px-3 py-1.5 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700 transition-colors"
                data-action="click->error-panel#retry">
          <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
          </svg>
          Try Again
        </button>
        
        <% if technical_details %>
          <button class="text-sm text-red-600 dark:text-red-400 hover:underline"
                  data-action="click->error-panel#toggleTechnical">
            <span data-error-panel-target="toggleText">Show technical details</span>
          </button>
        <% end %>
      </div>
      
      <%# Technical details (hidden by default) %>
      <% if technical_details %>
        <div class="mt-4 hidden" data-error-panel-target="technicalDetails">
          <div class="p-3 bg-gray-900 dark:bg-black rounded-md">
            <pre class="text-xs text-gray-300 font-mono whitespace-pre-wrap"><%= technical_details %></pre>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>