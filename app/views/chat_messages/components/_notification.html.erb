<%# Notification toast with actions %>
<div id="notification-<%= id %>" 
     class="notification rounded-lg p-3 mb-2 animate-slide-in-right <%= case type
                                                                        when 'warning' then 'bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800'
                                                                        when 'error' then 'bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800'
                                                                        when 'success' then 'bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800'
                                                                        else 'bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800'
                                                                        end %>"
     data-controller="notification">
  
  <div class="flex items-start">
    <div class="flex-shrink-0">
      <% case type %>
      <% when 'warning' %>
        <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
      <% when 'error' %>
        <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
      <% when 'success' %>
        <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
      <% else %>
        <svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
      <% end %>
    </div>
    
    <div class="ml-3 flex-1">
      <p class="text-sm font-medium <%= case type
                                      when 'warning' then 'text-yellow-800 dark:text-yellow-200'
                                      when 'error' then 'text-red-800 dark:text-red-200'
                                      when 'success' then 'text-green-800 dark:text-green-200'
                                      else 'text-blue-800 dark:text-blue-200'
                                      end %>">
        <%= message %>
      </p>
      
      <% if action %>
        <div class="mt-2">
          <button class="text-xs <%= case type
                                    when 'warning' then 'text-yellow-700 dark:text-yellow-300 hover:text-yellow-900 dark:hover:text-yellow-100'
                                    when 'error' then 'text-red-700 dark:text-red-300 hover:text-red-900 dark:hover:text-red-100'
                                    when 'success' then 'text-green-700 dark:text-green-300 hover:text-green-900 dark:hover:text-green-100'
                                    else 'text-blue-700 dark:text-blue-300 hover:text-blue-900 dark:hover:text-blue-100'
                                    end %> underline">
            <%= action.humanize %>
          </button>
        </div>
      <% end %>
    </div>
    
    <div class="ml-4 flex-shrink-0">
      <button class="text-gray-400 hover:text-gray-500 dark:text-gray-500 dark:hover:text-gray-400"
              data-action="click->notification#dismiss">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
        </svg>
      </button>
    </div>
  </div>
</div>