<%# Dependency management panel with smart detection %>
<div class="rounded-lg border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 p-4"
     data-controller="dependency-panel">
  
  <div class="flex items-center justify-between mb-3">
    <h3 class="text-sm font-semibold text-gray-900 dark:text-gray-100 flex items-center space-x-2">
      <svg class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
        <path d="M11 17a1 1 0 001.447.894l4-2A1 1 0 0017 15V9.236a1 1 0 00-1.447-.894l-4 2a1 1 0 00-.553.894V17zM15.211 6.276a1 1 0 000-1.788l-4.764-2.382a1 1 0 00-.894 0L4.789 4.488a1 1 0 000 1.788l4.764 2.382a1 1 0 00.894 0l4.764-2.382zM4.447 8.342A1 1 0 003 9.236V15a1 1 0 00.553.894l4 2A1 1 0 009 17v-5.764a1 1 0 00-.553-.894l-4-2z"/>
      </svg>
      <span>Dependencies</span>
    </h3>
    <% if missing.any? %>
      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200">
        <%= missing.count %> missing
      </span>
    <% else %>
      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
        All resolved
      </span>
    <% end %>
  </div>
  
  <%# Dependency list %>
  <div class="space-y-2">
    <% dependencies.each do |dep| %>
      <div class="flex items-center justify-between py-1.5 px-2 rounded transition-colors
                  <%= missing.include?(dep) ? 'bg-yellow-50 dark:bg-yellow-900/20' : 
                      resolved.include?(dep) ? 'bg-green-50 dark:bg-green-900/20' : '' %>">
        
        <div class="flex items-center space-x-2">
          <% if resolved.include?(dep) %>
            <svg class="w-4 h-4 text-green-500 animate-scale-in" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          <% elsif missing.include?(dep) %>
            <svg class="w-4 h-4 text-yellow-500 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
          <% else %>
            <div class="w-4 h-4 border-2 border-gray-300 dark:border-gray-600 rounded-full"></div>
          <% end %>
          
          <span class="font-mono text-sm text-gray-700 dark:text-gray-300"><%= dep %></span>
        </div>
        
        <% if missing.include?(dep) %>
          <button class="text-xs text-blue-600 dark:text-blue-400 hover:underline"
                  data-action="click->dependency-panel#installDependency"
                  data-dependency-panel-name-param="<%= dep %>">
            Install
          </button>
        <% end %>
      </div>
    <% end %>
  </div>
  
  <% if missing.any? %>
    <div class="mt-3 pt-3 border-t border-gray-200 dark:border-gray-700">
      <button class="w-full px-3 py-1.5 bg-blue-500 text-white text-sm font-medium rounded-md hover:bg-blue-600 transition-colors"
              data-action="click->dependency-panel#installAllMissing">
        Install All Missing Dependencies
      </button>
    </div>
  <% end %>
</div>