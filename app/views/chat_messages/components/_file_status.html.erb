<%# File status indicator with animations %>
<% case status %>
<% when 'creating' %>
  <div class="flex items-center space-x-1">
    <div class="animate-spin rounded-full h-3 w-3 border-b-2 border-blue-500"></div>
    <span class="text-xs text-blue-600 dark:text-blue-400">Creating...</span>
  </div>

<% when 'created' %>
  <div class="flex items-center space-x-1 animate-fade-in">
    <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
    </svg>
    <span class="text-xs text-green-600 dark:text-green-400">Created</span>
  </div>

<% when 'updated' %>
  <div class="flex items-center space-x-1 animate-fade-in">
    <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
    </svg>
    <span class="text-xs text-blue-600 dark:text-blue-400">Updated</span>
  </div>

<% when 'failed' %>
  <div class="flex items-center space-x-1 animate-shake">
    <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
    </svg>
    <% if defined?(message) && message %>
      <span class="text-xs text-red-600 dark:text-red-400" title="<%= message %>">Failed</span>
    <% else %>
      <span class="text-xs text-red-600 dark:text-red-400">Failed</span>
    <% end %>
  </div>

<% else %>
  <div class="flex items-center space-x-1">
    <div class="h-2 w-2 rounded-full bg-gray-300 dark:bg-gray-600"></div>
    <span class="text-xs text-gray-500 dark:text-gray-400">Pending</span>
  </div>
<% end %>