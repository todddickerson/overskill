<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @app_file do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @app_file %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @app_file, strategy: :label do %>
            <%= render 'shared/attributes/belongs_to', attribute: :app %>
            <%= render 'shared/attributes/text', attribute: :path %>
            <%= render 'shared/attributes/text', attribute: :content %>
            <%= render 'shared/attributes/option', attribute: :file_type %>
            <%= render 'shared/attributes/number', attribute: :size_bytes %>
            <%= render 'shared/attributes/text', attribute: :checksum %>
            <%= render 'shared/attributes/option', attribute: :is_entry_point %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @app_file], class: first_button_primary if can? :edit, @app_file %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @app_file], method: :delete, class: first_button_primary, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(@app_file)) } if can? :destroy, @app_file %>
          <%= link_to t('global.buttons.back'), [:account, @team, :app_files], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
