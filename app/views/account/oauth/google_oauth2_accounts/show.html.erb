<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= render 'account/shared/box' do |box| %>
      <% box.t :description, title: '.header' %>
      <% box.actions do %>
        <%= link_to t('.buttons.edit'), [:edit, :account, @google_oauth2_account], class: first_button_primary if can? :edit, @google_oauth2_account %>
        <%= button_to t('.buttons.destroy'), [:account, @google_oauth2_account], method: :delete, class: first_button_primary, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(@google_oauth2_account)) } if can? :destroy, @google_oauth2_account %>
        <%= link_to t('global.buttons.back'), [:account, @user, :oauth_google_oauth2_accounts], class: first_button_primary %>
      <% end %>
    <% end %>

    <%= render 'account/integrations/google_oauth2_installations/list', context: @user, google_oauth2_installations: @google_oauth2_account.integrations_google_oauth2_installations %>
    <%# ðŸš… super scaffolding will insert new children above this line. %>

  <% end %>
<% end %>
