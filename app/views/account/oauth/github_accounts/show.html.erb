<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= render 'account/shared/box' do |box| %>
      <% box.t :description, title: '.header' %>
      <% box.actions do %>
        <%= link_to t('.buttons.edit'), [:edit, :account, @github_account], class: first_button_primary if can? :edit, @github_account %>
        <%= button_to t('.buttons.destroy'), [:account, @github_account], method: :delete, class: first_button_primary, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(@github_account)) } if can? :destroy, @github_account %>
        <%= link_to t('global.buttons.back'), [:account, @user, :oauth_github_accounts], class: first_button_primary %>
      <% end %>
    <% end %>

    <%= render 'account/integrations/github_installations/list', context: @user, github_installations: @github_account.integrations_github_installations %>
    <%# ðŸš… super scaffolding will insert new children above this line. %>

  <% end %>
<% end %>
