<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :integrations_google_oauth2_installations %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<%= render 'account/shared/box' do |box| %>
  <% box.title t(".contexts.#{context.class.name.underscore}.header") %>
  <% box.description t(".contexts.#{context.class.name.underscore}.description") %>

  <% box.body do %>
    <% if google_oauth2_installations.any? %>
      <div class="space-y-0 border border-slate-200 shadow-sm rounded-md divide-y divide-slate-200">
        <% google_oauth2_installations.each do |google_oauth2_installation| %>
          <div class="flex py-1.5 px-3 items-center">
            <div class="flex-1 min-w-0">
              <%= google_oauth2_installation.name %>
            </div>
            <div class="flex flex-0 min-w-0 space-x-2 items-center">
              <% if can? :edit, google_oauth2_installation %>
                <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, google_oauth2_installation], class: 'button-secondary button-smaller' %>
              <% end %>

              <% if can? :destroy, google_oauth2_installation %>
                <%= link_to [:account, google_oauth2_installation, return_to: request.path], data: { turbo_method: :delete, turbo_confirm: t('.buttons.confirmations.destroy_from_user', team_name: google_oauth2_installation.team.label_string) }, class: 'inline-block text-slate-300 hover:text-slate-400 hover:no-underline text-lg' do %>
                  <i class="ti ti-close"></i>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <% box.actions do %>
    <% unless hide_actions %>
      <% if context == team %>
        <% if can? :create, Integrations::GoogleOauth2Installation.new(team: team) %>
          <span data-turbo="false">
            <%= button_to user_google_oauth2_omniauth_authorize_path(team_id: team.id), class: "#{first_button_primary(:integrations_google_oauth2_installation)} new" do %>
              <%= t('.buttons.new') %>
            <% end %>
          </span>
        <% end %>
      <% end %>

      <% unless hide_back %>
        <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:integrations_google_oauth2_installation)} back" %>
      <% end %>
    <% end %>
  <% end %>

  <% box.footer do %>
    <%= raw t(".contexts.team.authentication_note", authentication_url: url_for([:edit, :account, current_user])) %>
  <% end %>
<% end %>
