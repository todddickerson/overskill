<% cancel_path ||= app_setting.persisted? ? [:account, app_setting] : [:account, @app, :app_settings] %>

<%= form_with model: app_setting, url: (app_setting.persisted? ? [:account, app_setting] : [:account, @app, :app_settings]), class: 'form' do |form| %>
  <%= render "shared/limits/form", form: form, cancel_path: cancel_path do %>
    <%= render 'account/shared/forms/errors', form: form %>

    <% with_field_settings form: form do %>
      <%= render 'shared/fields/text_field', method: :key, options: {autofocus: true} %>
      <%= render 'shared/fields/text_area', method: :value %>
      <%= render 'shared/fields/text_field', method: :setting_type %>
      <%= render 'shared/fields/text_area', method: :description %>
      <%= render 'shared/fields/options', method: :encrypted %>
      <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <% end %>

    <div class="buttons">
      <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "button" %>
      <%= link_to t('global.buttons.cancel'), cancel_path, class: "button-secondary" %>
    </div>
  <% end %>
<% end %>
