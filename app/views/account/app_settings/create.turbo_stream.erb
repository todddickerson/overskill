<% end %>

<%= turbo_stream.append "flash" do %>
  <div class="p-4 mb-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg">
    <p class="text-sm text-green-800 dark:text-green-200">Setting created successfully!</p>
  </div>
<% end %>