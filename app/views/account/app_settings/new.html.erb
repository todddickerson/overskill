<% content_for :title, "New Setting - #{@app.name}" %>

<div class="max-w-2xl mx-auto">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Add New Setting</h1>
    <p class="text-gray-600 dark:text-gray-400 mt-1">Configure a new environment variable for <%= @app.name %></p>
  </div>
  
  <div class="bg-white dark:bg-gray-900 shadow rounded-lg p-6">
    <%= render 'form', app_setting: @app_setting %>
  </div>
</div>