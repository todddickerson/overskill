<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @app_audit_log do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @app_audit_log %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @app_audit_log, strategy: :label do %>
            <%= render 'shared/attributes/text', attribute: :action_type %>
            <%= render 'shared/attributes/option', attribute: :performed_by %>
            <%= render 'shared/attributes/text', attribute: :target_resource %>
            <%= render 'shared/attributes/text', attribute: :resource_id %>
            <%= render 'shared/attributes/text', attribute: :change_details %>
            <%= render 'shared/attributes/text', attribute: :ip_address %>
            <%= render 'shared/attributes/text', attribute: :user_agent %>
            <%= render 'shared/attributes/date_and_time', attribute: :occurred_at %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @app_audit_log], class: first_button_primary if can? :edit, @app_audit_log %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @app_audit_log], method: :delete, class: first_button_primary, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(@app_audit_log)) } if can? :destroy, @app_audit_log %>
          <%= link_to t('global.buttons.back'), [:account, @app, :app_audit_logs], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
