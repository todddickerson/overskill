<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :apps %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: app do %>
  <tr data-id="<%= app.id %>">
    <%= render "shared/tables/checkbox", object: app %>
    <td><%= render 'shared/attributes/text', attribute: :name, url: [:account, app] %></td>
    <td><%= render 'shared/attributes/text', attribute: :subdomain %></td>
    <td><%= render 'account/apps/status_badge', app: app %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if app.generated? %>
          <%= link_to "Editor", account_app_editor_path(app), class: 'button-primary button-smaller' %>
        <% end %>
        <% if can? :edit, app %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, app], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, app %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, app], method: :delete, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(app)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
