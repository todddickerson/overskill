<% apps = apps.accessible_by(current_ability) %>
<% team = @team %>
<% context ||= team %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% pagy ||= nil %>
<% pagy, apps = pagy(apps, page_param: :apps_page) unless pagy %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Apps</h2>
      <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
        Manage and deploy your AI-generated applications
      </p>
    </div>
    <% if can? :create, App.new(team: team) %>
      <%= link_to generator_index_path, class: "inline-flex items-center px-4 py-2 bg-gradient-to-r from-yellow-500 to-yellow-600 text-white font-medium rounded-lg shadow-sm hover:from-yellow-600 hover:to-yellow-700 transition-all hover:-translate-y-0.5 hover:shadow-lg" do %>
        <i class="fas fa-plus mr-2"></i>
        Create New App
      <% end %>
    <% end %>
  </div>

  <!-- Apps Grid -->
  <% if apps.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% apps.each do |app| %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-all duration-300 hover:-translate-y-1 group">
          <!-- App Icon/Preview -->
          <div class="aspect-video bg-gradient-to-br <%= ['from-blue-400 to-blue-600', 'from-green-400 to-green-600', 'from-purple-400 to-purple-600', 'from-pink-400 to-pink-600', 'from-yellow-400 to-yellow-600', 'from-indigo-400 to-indigo-600'].sample %> rounded-t-xl flex items-center justify-center">
            <div class="text-white">
              <i class="fas fa-<%= app.app_type == 'tool' ? 'wrench' : app.app_type == 'saas' ? 'cloud' : app.app_type == 'game' ? 'gamepad' : app.app_type == 'dashboard' ? 'chart-line' : 'cube' %> text-4xl opacity-90"></i>
            </div>
          </div>
          
          <!-- App Details -->
          <div class="p-4">
            <div class="flex items-start justify-between mb-2">
              <h3 class="font-semibold text-gray-900 dark:text-white truncate flex-1">
                <%= link_to app.name, account_app_editor_path(app), class: "hover:text-yellow-600 dark:hover:text-yellow-400" %>
              </h3>
              <span class="ml-2 <%= app.status == 'published' ? 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400' : app.status == 'ready' ? 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400' : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-400' %> text-xs px-2 py-0.5 rounded-full font-medium">
                <%= app.status.capitalize %>
              </span>
            </div>
            
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2">
              <%= app.description.presence || "#{app.app_type.humanize} application" %>
            </p>
            
            <div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400 mb-3">
              <span><i class="far fa-clock mr-1"></i> <%= app.created_at.strftime("%b %d") %></span>
              <span><i class="far fa-eye mr-1"></i> <%= rand(100..999) %> views</span>
            </div>
            
            <!-- Actions -->
            <div class="flex items-center space-x-2">
              <% if app.preview_url.present? %>
                <%= link_to app.preview_url, target: "_blank", class: "flex-1 text-center px-3 py-1.5 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors" do %>
                  <i class="fas fa-external-link-alt mr-1"></i> Preview
                <% end %>
              <% end %>
              <%= link_to account_app_editor_path(app), class: "flex-1 text-center px-3 py-1.5 text-sm font-medium text-yellow-600 dark:text-yellow-400 bg-yellow-50 dark:bg-yellow-900/20 rounded-lg hover:bg-yellow-100 dark:hover:bg-yellow-900/30 transition-colors" do %>
                <i class="fas fa-edit mr-1"></i> Edit
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- Pagination -->
    <% if pagy.pages > 1 %>
      <div class="flex justify-center">
        <%== pagy_nav(pagy) %>
      </div>
    <% end %>
  <% else %>
    <!-- Empty State -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-12 text-center">
      <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
        <i class="fas fa-cube text-3xl text-gray-400 dark:text-gray-500"></i>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No apps yet</h3>
      <p class="text-gray-600 dark:text-gray-400 mb-6 max-w-md mx-auto">
        Get started by creating your first AI-powered application. It only takes a few seconds!
      </p>
      <% if can? :create, App.new(team: team) %>
        <%= link_to generator_index_path, class: "inline-flex items-center px-6 py-3 bg-gradient-to-r from-yellow-500 to-yellow-600 text-white font-medium rounded-lg shadow-sm hover:from-yellow-600 hover:to-yellow-700 transition-all hover:-translate-y-0.5 hover:shadow-lg" do %>
          <i class="fas fa-magic mr-2"></i>
          Create Your First App
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>