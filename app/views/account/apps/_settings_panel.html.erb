<div class="bg-white dark:bg-gray-900 shadow-lg rounded-lg">
  <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">App Settings</h3>
    <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Configure your app with simple, easy-to-understand settings</p>
  </div>
  
  <div class="p-6">
    <%= turbo_frame_tag "app_settings_#{app.id}" do %>
      <!-- Settings by Category -->
      <div class="space-y-8">
        <% AppSetting::SETTING_TYPES.each do |type_key, type_label| %>
          <% settings = app.app_settings.by_type(type_key) %>
          <% common_settings_for_type = AppSetting::COMMON_SETTINGS.select { |k, v| v[:type] == type_key } %>
          
          <% if common_settings_for_type.any? %>
            <div>
              <h4 class="text-sm font-medium text-gray-900 dark:text-white mb-4 flex items-center">
                <% case type_key %>
                <% when 'general' %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                <% when 'email' %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                <% when 'analytics' %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                <% when 'social' %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                <% else %>
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"/>
                  </svg>
                <% end %>
                <%= type_label %>
              </h4>
              
              <div class="space-y-4">
                <% common_settings_for_type.each do |key, config| %>
                  <% setting = settings.find { |s| s.key == key } || app.app_settings.build(key: key, setting_type: config[:type]) %>
                  
                  <div class="group">
                    <%= form_with model: setting, url: setting.persisted? ? account_app_app_setting_path(app, setting) : account_app_app_settings_path(app), 
                                  data: { turbo_frame: "app_settings_#{app.id}" } do |f| %>
                      <div class="flex items-start space-x-3">
                        <div class="flex-1">
                          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                            <%= config[:label] %>
                            <% if config[:required] %>
                              <span class="text-red-500">*</span>
                            <% end %>
                          </label>
                          <%= f.text_field :value, 
                              placeholder: config[:placeholder],
                              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-800 dark:text-white",
                              required: config[:required] %>
                        </div>
                        
                        <div class="opacity-0 group-hover:opacity-100 transition-opacity pt-6">
                          <%= f.submit "Save", class: "px-3 py-1.5 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700 cursor-pointer" %>
                        </div>
                      </div>
                      
                      <%= f.hidden_field :key %>
                      <%= f.hidden_field :setting_type %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      
      <!-- Advanced Settings Toggle -->
      <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
        <details class="group">
          <summary class="cursor-pointer flex items-center text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">
            <svg class="w-4 h-4 mr-2 transform group-open:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            Advanced Settings (for technical users)
          </summary>
          
          <div class="mt-4 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
            <p class="text-sm text-gray-600 dark:text-gray-400 mb-4">
              Add custom environment variables for advanced configurations. These will be available in your app as process.env.VARIABLE_NAME
            </p>
            
            <%= link_to account_app_app_settings_path(app), 
                        class: "inline-flex items-center px-4 py-2 bg-gray-600 text-white text-sm rounded-md hover:bg-gray-700" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Manage All Environment Variables
            <% end %>
          </div>
        </details>
      </div>
    <% end %>
  </div>
</div>