<% cancel_path ||= app.persisted? ? [:account, app] : [:account, @team, :apps] %>

<%= form_with model: app, url: (app.persisted? ? [:account, app] : [:account, @team, :apps]), class: 'form' do |form| %>
  <%= render "shared/limits/form", form: form, cancel_path: cancel_path do %>
    <%= render 'account/shared/forms/errors', form: form %>

    <% with_field_settings form: form do %>
      <% if app.new_record? %>
        <%# For new apps, only show generation fields %>
        <%= render 'shared/fields/text_field', method: :name, options: {autofocus: true, placeholder: "My Awesome App"} %>
        
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">Quick Examples</label>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <button type="button" class="text-left p-2 rounded border hover:bg-gray-50" onclick="document.getElementById('app_prompt').value = 'Create a todo list app with categories, due dates, and priority levels. Use a modern purple theme.'">
              âœ… <span class="font-medium">Todo App</span><br>
              <span class="text-xs text-gray-600">Task management with categories</span>
            </button>
            <button type="button" class="text-left p-2 rounded border hover:bg-gray-50" onclick="document.getElementById('app_prompt').value = 'Build a memory card matching game with emojis. Include score tracking and difficulty levels.'">
              ðŸŽ® <span class="font-medium">Memory Game</span><br>
              <span class="text-xs text-gray-600">Fun matching game with scores</span>
            </button>
            <button type="button" class="text-left p-2 rounded border hover:bg-gray-50" onclick="document.getElementById('app_prompt').value = 'Create a SaaS landing page for a project management tool. Include pricing, features, and testimonials.'">
              ðŸš€ <span class="font-medium">SaaS Landing</span><br>
              <span class="text-xs text-gray-600">Professional product page</span>
            </button>
            <button type="button" class="text-left p-2 rounded border hover:bg-gray-50" onclick="document.getElementById('app_prompt').value = 'Build a sales dashboard with charts showing revenue, customers, and growth metrics. Use a dark theme.'">
              ðŸ“Š <span class="font-medium">Analytics Dashboard</span><br>
              <span class="text-xs text-gray-600">Data viz with charts</span>
            </button>
            <button type="button" class="text-left p-2 rounded border hover:bg-gray-50" onclick="document.getElementById('app_prompt').value = 'Create a scientific calculator with trigonometry functions and memory. Use a sleek dark theme.'">
              ðŸ§® <span class="font-medium">Calculator</span><br>
              <span class="text-xs text-gray-600">Scientific calculator app</span>
            </button>
          </div>
        </div>
        
        <%= render 'shared/fields/text_area', method: :prompt, options: {rows: 4, placeholder: "Describe your app idea and any colors or theme you'd like..."} %>
        <%= render 'shared/fields/options', method: :app_type, options: {include_blank: false} %>
        <%= render 'shared/fields/options', method: :framework, options: {include_blank: false} %>
        
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">AI Model</label>
          <%= form.select :ai_model, 
              options_for_select([
                ['Claude Sonnet 4 (Recommended)', 'claude-sonnet-4', { 'data-description' => 'Best for coding - 72.7% on SWE-bench, superior reasoning' }],
                ['Claude Opus 4.1 (Premium)', 'claude-opus-4.1', { 'data-description' => 'Most capable - Complex tasks, long-running generation' }],
                ['GPT-5 (Unified AI)', 'gpt-5', { 'data-description' => 'PhD-level intelligence with reasoning, released Aug 7, 2025' }],
                ['GPT-5 Mini (Fast)', 'gpt-5-mini', { 'data-description' => 'Smaller GPT-5 for faster generation' }]
              ], app.ai_model || 'claude-sonnet-4'),
              {},
              class: 'form-control' %>
          <p class="text-xs text-gray-500 mt-1">Claude 4 models excel at comprehensive app structure. GPT-5 provides PhD-level reasoning with unified capabilities.</p>
        </div>
        
        <%= render 'shared/fields/number_field', method: :base_price, options: {value: 0} %>
        
        <%# Hidden fields with defaults %>
        <%= form.hidden_field :creator_id, value: current_membership.id %>
        <%= form.hidden_field :status, value: "generating" %>
        <%= form.hidden_field :visibility, value: "private" %>
      <% else %>
        <%# For existing apps, show all fields %>
        <%= render 'shared/fields/text_field', method: :name, options: {autofocus: true} %>
        <%= render 'shared/fields/text_field', method: :slug %>
        <%= render 'shared/fields/text_area', method: :description %>
        <%= render 'shared/fields/super_select', method: :creator_id, options: {}, html_options: {},
          choices: @app.valid_creators.map { |membership| [membership.label_string, membership.id] } %>
        <%= render 'shared/fields/text_area', method: :prompt %>
        <%= render 'shared/fields/options', method: :app_type %>
        <%= render 'shared/fields/options', method: :framework %>
        <%= render 'shared/fields/options', method: :status %>
        <%= render 'shared/fields/options', method: :visibility %>
        <%= render 'shared/fields/number_field', method: :base_price %>
        <%= render 'shared/fields/text_field', method: :stripe_product_id %>
        <%= render 'shared/fields/text_field', method: :preview_url %>
        <%= render 'shared/fields/text_field', method: :production_url %>
        <%= render 'shared/fields/text_field', method: :github_repo %>
        <%= render 'shared/fields/options', method: :featured %>
        <%= render 'shared/fields/date_and_time_field', method: :featured_until %>
        <%= render 'shared/fields/date_and_time_field', method: :launch_date %>
      <% end %>
      <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <% end %>

    <div class="buttons">
      <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "button" %>
      <%= link_to t('global.buttons.cancel'), cancel_path, class: "button-secondary" %>
    </div>
  <% end %>
<% end %>
