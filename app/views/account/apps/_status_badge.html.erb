<% status_classes = {
  "generating" => "bg-blue-100 text-blue-800",
  "generated" => "bg-green-100 text-green-800",
  "testing" => "bg-yellow-100 text-yellow-800",
  "ready" => "bg-green-100 text-green-800",
  "published" => "bg-purple-100 text-purple-800",
  "failed" => "bg-red-100 text-red-800"
} %>

<span id="app_<%= app.id %>_status" class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= status_classes[app.status] || 'bg-gray-100 text-gray-800' %>">
  <% if app.status == "generating" %>
    <svg class="animate-spin -ml-0.5 mr-1.5 h-3 w-3" fill="none" viewBox="0 0 24 24">
      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
    </svg>
  <% end %>
  <%= app.status.humanize %>
</span>