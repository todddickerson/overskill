<!-- Version History Modal -->
<div data-controller="version-history"
     data-version-history-app-id-value="<%= @app.to_param %>"
     data-version-history-target="modal" 
     class="hidden fixed inset-0 z-50 overflow-y-auto">
  <div class="flex items-center justify-center min-h-screen p-4 modal-mobile-responsive">
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-black opacity-50" 
         data-action="click->version-history#close"></div>
    
    <!-- Modal Content -->
    <div class="relative bg-white dark:bg-gray-800 rounded-lg lg:rounded-lg shadow-xl max-w-4xl w-full max-h-[90vh] flex flex-col modal-content-mobile">
      <!-- Modal Header -->
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex-shrink-0">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100">
            <i class="fas fa-history mr-2"></i>Version History
          </h3>
          <button data-action="click->version-history#close"
                  class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
            <i class="fas fa-times"></i>
          </button>
        </div>
      </div>
      
      <!-- Version List -->
      <div class="overflow-y-auto flex-1" data-version-history-target="content">
        <!-- Mobile: Tighter padding, Desktop: Normal padding -->
        <div class="p-3 lg:p-6">
          <div class="space-y-3 lg:space-y-2">
            <% @app.app_versions.order(created_at: :desc).each do |version| %>
              <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-4 lg:p-4 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors group cursor-pointer"
                   data-version-id="<%= version.id %>">
                <!-- Mobile: Stack layout, Desktop: Flex layout -->
                <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-3 lg:gap-0">
                  <div class="flex-1">
                    <!-- Version Header - Mobile optimized -->
                    <div class="flex flex-col lg:flex-row lg:items-center gap-2 lg:gap-3">
                      <div class="flex items-center gap-2">
                        <h4 class="font-semibold text-gray-900 dark:text-gray-100 text-base lg:text-base">
                          Version <%= version.version_number %>
                        </h4>
                        <% if version.bookmarked? %>
                          <i class="fas fa-bookmark text-yellow-500 text-sm" title="Bookmarked"></i>
                        <% end %>
                      </div>
                      <span class="text-sm text-gray-500 dark:text-gray-400">
                        <%= time_ago_in_words(version.created_at) %> ago
                      </span>
                    </div>
                    
                    <% if version.changelog.present? %>
                      <p class="text-sm text-gray-600 dark:text-gray-300 mt-2 lg:mt-1 line-clamp-3 lg:line-clamp-none">
                        <%= version.changelog %>
                      </p>
                    <% end %>
                    
                    <% if version.changed_files.present? %>
                      <p class="text-xs text-gray-500 dark:text-gray-400 mt-2 truncate lg:whitespace-normal">
                        <i class="fas fa-file-code mr-1"></i>
                        <%= version.changed_files %>
                      </p>
                    <% end %>
                  </div>
                  
                  <!-- Action Buttons - Mobile: Full width, Desktop: Inline -->
                  <div class="flex flex-col lg:flex-row gap-2 lg:gap-2 lg:opacity-0 group-hover:opacity-100 lg:transition-opacity">
                    <button onclick="window.postMessage({action: 'preview', version: '<%= version.id %>'}, '*')"
                            data-action="click->version-history#close"
                            class="w-full lg:w-auto text-sm lg:text-xs text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg lg:rounded px-4 py-2.5 lg:px-3 lg:py-1 transition-colors flex items-center justify-center lg:inline-flex"
                            title="Preview this version">
                      <i class="fas fa-eye mr-2 lg:mr-1"></i>Preview
                    </button>
                    <button onclick="window.postMessage({action: 'restore', version: '<%= version.id %>'}, '*')"
                            data-action="click->version-history#close"
                            class="w-full lg:w-auto text-sm lg:text-xs text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 bg-white dark:bg-gray-800 border border-blue-300 dark:border-blue-600 rounded-lg lg:rounded px-4 py-2.5 lg:px-3 lg:py-1 transition-colors flex items-center justify-center lg:inline-flex"
                            title="Restore this version">
                      <i class="fas fa-undo mr-2 lg:mr-1"></i>Restore
                    </button>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <!-- Modal Footer -->
      <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex-shrink-0">
        <div class="flex justify-between items-center">
          <p class="text-sm text-gray-500 dark:text-gray-400">
            <%= pluralize(@app.app_versions.count, 'version') %> total
            <% if @app.app_versions.where(bookmarked: true).any? %>
              â€¢ <%= pluralize(@app.app_versions.where(bookmarked: true).count, 'bookmarked') %>
            <% end %>
          </p>
          <button data-action="click->version-history#close"
                  class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors">
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>