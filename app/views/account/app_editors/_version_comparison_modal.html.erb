<!-- Version Comparison Modal -->
<div id="version_comparison_modal" 
     class="hidden fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm z-50 flex items-center justify-center animate-fadeIn"
     data-action="click->version-comparison#closeOnBackdrop"
     data-version-comparison-target="modal">
  
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl max-w-6xl w-full mx-4 max-h-[90vh] flex flex-col animate-slideUp transition-colors duration-200">
    <!-- Header -->
    <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <div class="flex items-center space-x-4">
        <h2 class="text-xl font-semibold text-gray-900 dark:text-gray-100">Version Comparison</h2>
        <div class="flex items-center space-x-2 text-sm">
          <span class="px-3 py-1 bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300 rounded-full font-mono" data-version-comparison-target="versionA">v1.0.0</span>
          <i class="fas fa-arrow-right text-gray-400"></i>
          <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 rounded-full font-mono" data-version-comparison-target="versionB">v1.0.1</span>
        </div>
      </div>
      <button data-action="click->version-comparison#close" 
              class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200 p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- Loading State -->
    <div data-version-comparison-target="loading" class="flex-1 flex items-center justify-center py-12">
      <div class="text-center">
        <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
        <p class="text-gray-600 dark:text-gray-400">Loading version comparison...</p>
      </div>
    </div>
    
    <!-- Content -->
    <div data-version-comparison-target="content" class="hidden flex-1 overflow-hidden flex flex-col">
      <!-- Diff Legend -->
      <div class="px-6 py-3 bg-gray-50 dark:bg-gray-700 border-b border-gray-200 dark:border-gray-600">
        <div class="flex items-center space-x-6 text-xs">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-500 rounded-full"></div>
            <span class="text-gray-600 dark:text-gray-400">Added</span>
          </div>
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
            <span class="text-gray-600 dark:text-gray-400">Modified</span>
          </div>
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-red-500 rounded-full"></div>
            <span class="text-gray-600 dark:text-gray-400">Deleted</span>
          </div>
        </div>
      </div>
      
      <!-- Diff Container -->
      <div class="flex-1 overflow-y-auto p-6" data-version-comparison-target="diffContainer">
        <!-- Diff content will be populated by JavaScript -->
      </div>
    </div>
    
    <!-- Footer -->
    <div class="px-6 py-4 bg-gray-50 dark:bg-gray-700 border-t border-gray-200 dark:border-gray-600 flex justify-between items-center">
      <div class="text-sm text-gray-500 dark:text-gray-400">
        Use keyboard shortcuts: <kbd class="px-2 py-1 bg-gray-200 dark:bg-gray-600 rounded text-xs">j/k</kbd> to navigate changes
      </div>
      <button data-action="click->version-comparison#close"
              class="bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-300 font-medium px-4 py-2 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-500 transition-all duration-200">
        Close
      </button>
    </div>
  </div>
</div>