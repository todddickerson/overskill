<%# Unified version card - handles both live progress and completed states %>
<% 
  # Determine card state and version info
  is_in_progress = ['executing', 'planning'].include?(message.status)
  version = message.app_version
  next_version = is_in_progress ? next_version_number : nil
  
  # Don't show anything if not assistant or no version context
  return unless message.role == 'assistant' && (is_in_progress || version.present?)
%>

<div id="<%= is_in_progress ? "version_progress_#{message.id}" : "version_info_#{version.id}" %>" 
     class="ml-8 mt-3 relative group transition-all duration-300 <%= is_in_progress ? 'bg-gradient-to-r from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 border border-blue-200 dark:border-blue-700' : 'bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700' %> rounded-lg p-3"
     <%= is_in_progress ? 'data-controller="version-progress" data-version-progress-message-id-value="' + message.id.to_s + '"' : '' %>>
  
  <!-- Version Header -->
  <div class="flex items-center justify-between mb-2">
    <div class="flex items-center space-x-2">
      <!-- Status Indicator -->
      <div class="<%= is_in_progress ? 'w-2 h-2 bg-blue-500 rounded-full animate-pulse' : 'w-2 h-2 bg-green-500 rounded-full' %>" 
           <%= 'data-version-progress-target="statusIndicator"' if is_in_progress %>></div>
      
      <!-- Version Title -->
      <span class="text-sm font-medium <%= is_in_progress ? 'text-blue-900 dark:text-blue-100' : 'text-gray-900 dark:text-gray-100' %>"
            <%= 'data-version-progress-target="versionTitle"' if is_in_progress %>>
        <% if is_in_progress %>
          <span data-version-progress-target="progressTitle">Processing...</span>
        <% else %>
          <%= version.formatted_display_name %>
        <% end %>
      </span>
      
      <!-- Version Number Badge -->
      <% unless is_in_progress %>
        <span class="text-xs px-2 py-0.5 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full">
          v<%= version.version_number %>
        </span>
      <% end %>
      
      <!-- Timestamp -->
      <span class="text-xs <%= is_in_progress ? 'text-blue-600 dark:text-blue-300' : 'text-gray-500 dark:text-gray-400' %>"
            <%= 'data-version-progress-target="timestamp"' if is_in_progress %>>
        <%= time_ago_in_words(is_in_progress ? message.created_at : version.created_at) %> ago
      </span>
      
      <!-- Bookmark indicator for completed versions -->
      <% if !is_in_progress && version.bookmarked? %>
        <i class="fas fa-bookmark text-yellow-500 text-xs" title="Bookmarked"></i>
      <% end %>
    </div>
    
    <!-- Progress Summary (in progress only) -->
    <% if is_in_progress %>
      <div class="text-xs text-blue-700 dark:text-blue-300" data-version-progress-target="progressSummary">
        <span data-version-progress-target="completedCount">0</span> of 
        <span data-version-progress-target="totalCount">0</span> files
      </div>
    <% end %>
  </div>

  <!-- Changelog/Description (completed versions only) -->
  <% if !is_in_progress && version.changelog.present? %>
    <p class="text-xs text-gray-600 dark:text-gray-400 mb-2">
      <%= version.changelog %>
    </p>
  <% end %>

  <!-- File Progress List (in progress) OR Files Summary (completed) -->
  <% if is_in_progress %>
    <!-- Live file progress -->
    <div class="space-y-2" data-version-progress-target="fileList">
      <!-- Files will be dynamically added here -->
    </div>
  <% else %>
    <!-- Completed files with clickable names -->
    <% file_changes = version.formatted_file_changes %>
    <% if file_changes.any? %>
      <div class="space-y-1 mb-3">
        <div class="text-xs text-gray-500 dark:text-gray-400 mb-2">
          <%= file_changes.count %> file<%= 's' if file_changes.count > 1 %> changed:
        </div>
        <% file_changes.each do |change| %>
          <div class="flex items-center justify-between py-1 px-2 bg-white/30 dark:bg-gray-800/30 rounded border border-gray-200/30 dark:border-gray-600/30">
            <div class="flex items-center space-x-2">
              <div class="flex-shrink-0">
                <div class="w-3 h-3 rounded-full bg-green-500 flex items-center justify-center">
                  <i class="fas fa-check text-white text-xs"></i>
                </div>
              </div>
              <i class="fas fa-file text-gray-400 text-xs"></i>
              <button 
                class="text-sm text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 font-medium underline-offset-2 hover:underline"
                data-action="click->file-tree#navigateToFile"
                data-file-path="<%= change[:full_path] %>"
                title="Open <%= change[:full_path] %> in code editor">
                <%= change[:file_name] %>
              </button>
              <span class="text-xs text-gray-500 dark:text-gray-400">
                (<%= change[:action_label] %>)
              </span>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>

  <!-- Version Actions -->
  <% if is_in_progress %>
    <!-- Hidden actions container that will be shown when complete -->
    <div class="hidden mt-4 pt-3 border-t border-blue-200 dark:border-blue-700" data-version-progress-target="versionActions">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-2">
          <div class="w-2 h-2 bg-green-500 rounded-full"></div>
          <span class="text-sm font-medium text-green-900 dark:text-green-100">Version Complete</span>
          <span class="text-xs px-2 py-0.5 bg-green-100 dark:bg-green-800 text-green-800 dark:text-green-200 rounded-full">
            v<span data-version-progress-target="finalVersion"></span>
          </span>
        </div>
        
        <%= render "account/app_editors/version_action_buttons", version_id: nil, is_dynamic: true %>
      </div>
    </div>
  <% else %>
    <!-- Static action buttons for completed versions -->
    <div class="absolute -bottom-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity duration-200 z-10">
      <%= render "account/app_editors/version_action_buttons", version_id: version.id, is_dynamic: false %>
    </div>
  <% end %>
</div>