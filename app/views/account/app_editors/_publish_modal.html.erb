<div id="publish_modal" 
     class="hidden fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm z-50 flex items-center justify-center lg:animate-fadeIn"
     data-controller="publish-modal"
     data-publish-modal-app-id-value="<%= app.to_param %>"
     data-publish-modal-target="modal"
     data-action="click->publish-modal#closeOnBackdrop">
  
  <div class="bg-white dark:bg-gray-800 rounded-t-2xl lg:rounded-xl shadow-2xl w-full max-w-2xl mx-auto lg:mx-4 lg:animate-slideUp transition-colors duration-200 
              fixed bottom-0 left-0 right-0 lg:relative lg:inset-auto 
              max-h-[85vh] lg:max-h-[90vh] overflow-hidden flex flex-col" data-publish-modal-target="content">
    <!-- Header -->
    <div class="px-4 sm:px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between flex-shrink-0">
      <h2 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-gray-100">Publish Settings</h2>
      <button data-action="click->publish-modal#close" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200 p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
        <svg class="w-5 sm:w-6 h-5 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- Content -->
    <div class="flex-1 overflow-y-auto px-4 sm:px-6 py-4 sm:py-6 space-y-4 sm:space-y-6">
      <!-- Deploy/Update Options -->
      <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-4 space-y-4">
        <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Deploy Options</h3>
        
        <div class="space-y-3">
          <!-- Deploy to Production -->
          <button data-action="click->publish-modal#deployProduction"
                  data-publish-modal-target="deployButton"
                  class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-all duration-200 transform hover:scale-[1.02] shadow-sm hover:shadow-md flex items-center justify-center space-x-2">
            <i class="fas fa-rocket"></i>
            <span>Deploy to Production</span>
          </button>
          
          <!-- Deploy to Preview -->
          <button data-action="click->publish-modal#deployPreview"
                  class="w-full bg-gray-600 hover:bg-gray-700 text-white font-medium py-2.5 px-6 rounded-lg transition-all duration-200 flex items-center justify-center space-x-2">
            <i class="fas fa-eye"></i>
            <span>Update Preview Only</span>
          </button>
        </div>
        
        <!-- Deploy Status -->
        <div class="hidden mt-4 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg" data-publish-modal-target="deployStatus">
          <div class="flex items-center space-x-2">
            <i class="fas fa-spinner fa-spin text-blue-600 dark:text-blue-400"></i>
            <span class="text-sm text-blue-700 dark:text-blue-300">Deploying...</span>
          </div>
        </div>
      </div>
      
      <!-- Preview Section -->
      <div class="bg-gray-50 rounded-lg p-4">
        <h3 class="text-sm font-medium text-gray-700 mb-3">Preview</h3>
        <div class="flex items-center justify-between bg-white rounded-md px-4 py-3 border border-gray-200">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
            </svg>
            <span class="text-sm text-gray-900" data-publish-modal-target="previewUrl">
              <%= app.preview_url %>
            </span>
          </div>
          <button data-action="click->publish-modal#copyPreviewUrl" 
                  class="text-gray-400 hover:text-gray-600"
                  title="Copy URL">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Published Site Section -->
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-sm font-medium text-gray-700">Published site</h3>
        </div>
        
        <!-- Visitor Analytics -->
        <div class="bg-white rounded-lg p-4 border border-gray-200 mb-3">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="text-sm font-medium text-gray-900">Visitor Analytics</span>
            </div>
            <div class="text-right">
              <div class="text-2xl font-bold text-blue-600" data-publish-modal-target="visitorCount">0</div>
              <div class="text-xs text-gray-500">Total visitors</div>
            </div>
          </div>
          
          <!-- Daily Chart -->
          <div class="space-y-2">
            <div class="flex items-center justify-between text-xs text-gray-500">
              <span>Last 7 days</span>
              <span data-publish-modal-target="todayVisitors">0 today</span>
            </div>
            <div class="flex items-end justify-between h-12 space-x-1" data-publish-modal-target="visitorChart">
              <!-- Chart bars will be populated by JavaScript -->
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 20%"></div>
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 40%"></div>
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 30%"></div>
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 60%"></div>
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 80%"></div>
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 45%"></div>
              <div class="flex-1 bg-blue-500 rounded-t min-h-[8px]" style="height: 70%"></div>
            </div>
            <div class="flex justify-between text-[10px] text-gray-400">
              <span>7d</span><span>6d</span><span>5d</span><span>4d</span><span>3d</span><span>2d</span><span>1d</span>
            </div>
          </div>
          
          <!-- Additional Metrics -->
          <div class="grid grid-cols-2 gap-4 pt-3 mt-3 border-t border-gray-100">
            <div class="text-center">
              <div class="text-lg font-semibold text-gray-900" data-publish-modal-target="totalVersions">0</div>
              <div class="text-xs text-gray-500">Updates published</div>
            </div>
            <div class="text-center">
              <div class="text-sm font-medium text-gray-900" data-publish-modal-target="lastUpdated">â€”</div>
              <div class="text-xs text-gray-500">Last updated</div>
            </div>
          </div>
        </div>
        
        <div class="space-y-3">
          <!-- Production URL -->
          <div class="flex items-center justify-between bg-white rounded-md px-4 py-3 border border-gray-200">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
              </svg>
              <span class="text-sm text-gray-900" data-publish-modal-target="productionUrl">
                <% if app.deployment_url.present? %>
                  <%= URI.parse(app.deployment_url).host %>
                <% elsif app.published_url.present? %>
                  <%= URI.parse(app.published_url).host %>
                <% else %>
                  <%= "#{app.subdomain}.#{ENV['APP_BASE_DOMAIN'] || 'overskill.com'}" %>
                <% end %>
              </span>
            </div>
            <button data-action="click->publish-modal#copyProductionUrl" 
                    class="text-gray-400 hover:text-gray-600"
                    title="Copy URL">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
          </div>
          
          <!-- Custom Domains -->
          <button class="w-full text-left flex items-center space-x-2 text-sm text-gray-600 hover:text-gray-900 px-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>Custom domains</span>
          </button>
        </div>
      </div>
      
      <!-- Advanced Features (Collapsible) -->
      <div class="bg-gray-50 rounded-lg" data-controller="collapsible">
        <button data-action="click->collapsible#toggle" 
                class="w-full px-4 py-3 flex items-center justify-between text-left hover:bg-gray-100 rounded-lg transition-colors">
          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
            </svg>
            <span class="text-sm font-medium text-gray-700">Advanced Features</span>
          </div>
          <svg class="w-4 h-4 text-gray-400 transform transition-transform" 
               data-collapsible-target="icon">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
        
        <div class="hidden px-4 pb-4 space-y-3" data-collapsible-target="content">
          <!-- Security Review -->
          <div class="bg-white rounded-lg p-4 border border-gray-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-sm text-gray-700">Security Review</span>
                <span class="text-xs text-green-600 bg-green-100 px-2 py-1 rounded-full">Free</span>
              </div>
              <button class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out">
                Run Scan
              </button>
            </div>
          </div>
          
          <!-- Performance Optimization -->
          <div class="bg-white rounded-lg p-4 border border-gray-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                <span class="text-sm text-gray-700">Performance Optimization</span>
                <span class="text-xs text-blue-600 bg-blue-100 px-2 py-1 rounded-full">Pro</span>
              </div>
              <button class="bg-gray-200 text-gray-500 text-sm font-medium py-2 px-4 rounded-md cursor-not-allowed">
                Upgrade
              </button>
            </div>
          </div>
          
          <!-- SEO Enhancement -->
          <div class="bg-white rounded-lg p-4 border border-gray-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                <span class="text-sm text-gray-700">SEO Enhancement</span>
                <span class="text-xs text-purple-600 bg-purple-100 px-2 py-1 rounded-full">Pro</span>
              </div>
              <button class="bg-gray-200 text-gray-500 text-sm font-medium py-2 px-4 rounded-md cursor-not-allowed">
                Upgrade
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Footer -->
    <div class="px-4 sm:px-6 py-4 bg-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 flex-shrink-0">
      <!-- Quick Actions -->
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center space-x-3">
          <span class="text-xs font-medium text-gray-700 uppercase tracking-wide">Quick Actions</span>
        </div>
      </div>
      
      <div class="grid grid-cols-3 gap-2 sm:gap-3 mb-3 sm:mb-4">
        <!-- Share Link -->
        <button data-action="click->publish-modal#copyProductionUrl"
                class="flex items-center justify-center space-x-1 sm:space-x-2 px-2 sm:px-3 py-2 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors text-xs sm:text-sm text-gray-700 dark:text-gray-300">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
          </svg>
          <span>Share</span>
        </button>
        
        <!-- Open in New Tab -->
        <button data-action="click->publish-modal#openInNewTab"
                class="flex items-center justify-center space-x-1 sm:space-x-2 px-2 sm:px-3 py-2 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors text-xs sm:text-sm text-gray-700 dark:text-gray-300">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
          </svg>
          <span>Open</span>
        </button>
        
        <!-- Download Code -->
        <button class="flex items-center justify-center space-x-1 sm:space-x-2 px-2 sm:px-3 py-2 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors text-xs sm:text-sm text-gray-700 dark:text-gray-300">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <span class="hidden sm:inline">Download</span>
          <i class="fas fa-download sm:hidden"></i>
        </button>
      </div>
      
      <!-- Main Action -->
      <div class="flex justify-center">
        <button data-action="click->publish-modal#openInNewTab"
                class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-8 rounded-lg transition duration-150 ease-in-out text-lg">
          View Live Site
        </button>
      </div>
    </div>
  </div>
</div>