<div id="publish_modal" 
     class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center"
     data-controller="publish-modal"
     data-publish-modal-app-id-value="<%= app.id %>">
  
  <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full mx-4" data-publish-modal-target="content">
    <!-- Header -->
    <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
      <h2 class="text-xl font-semibold text-gray-900">Publish Settings</h2>
      <button data-action="click->publish-modal#close" class="text-gray-400 hover:text-gray-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- Content -->
    <div class="p-6 space-y-6">
      <!-- Update Button -->
      <div class="flex justify-center">
        <button data-action="click->publish-modal#update"
                data-publish-modal-target="updateButton"
                class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-8 rounded-lg text-lg transition duration-150 ease-in-out">
          Update
        </button>
      </div>
      
      <!-- Preview Section -->
      <div class="bg-gray-50 rounded-lg p-4">
        <h3 class="text-sm font-medium text-gray-700 mb-3">Preview</h3>
        <div class="flex items-center justify-between bg-white rounded-md px-4 py-3 border border-gray-200">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
            </svg>
            <span class="text-sm text-gray-900" data-publish-modal-target="previewUrl">
              preview-<%= app.id %>.overskill.app
            </span>
          </div>
          <button data-action="click->publish-modal#copyPreviewUrl" 
                  class="text-gray-400 hover:text-gray-600"
                  title="Copy URL">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Published Site Section -->
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex items-center justify-between mb-3">
          <h3 class="text-sm font-medium text-gray-700">Published site</h3>
        </div>
        
        <!-- Visitor Analytics -->
        <div class="bg-white rounded-lg p-4 border border-gray-200 mb-3">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="text-sm font-medium text-gray-900">Visitor Analytics</span>
            </div>
            <div class="text-right">
              <div class="text-2xl font-bold text-blue-600" data-publish-modal-target="visitorCount">0</div>
              <div class="text-xs text-gray-500">Total visitors</div>
            </div>
          </div>
          
          <!-- Daily Chart -->
          <div class="space-y-2">
            <div class="flex items-center justify-between text-xs text-gray-500">
              <span>Last 7 days</span>
              <span data-publish-modal-target="todayVisitors">0 today</span>
            </div>
            <div class="flex items-end justify-between h-12 space-x-1" data-publish-modal-target="visitorChart">
              <!-- Chart bars will be populated by JavaScript -->
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 20%"></div>
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 40%"></div>
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 30%"></div>
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 60%"></div>
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 80%"></div>
              <div class="flex-1 bg-gray-200 rounded-t min-h-[8px]" style="height: 45%"></div>
              <div class="flex-1 bg-blue-500 rounded-t min-h-[8px]" style="height: 70%"></div>
            </div>
            <div class="flex justify-between text-[10px] text-gray-400">
              <span>7d</span><span>6d</span><span>5d</span><span>4d</span><span>3d</span><span>2d</span><span>1d</span>
            </div>
          </div>
          
          <!-- Additional Metrics -->
          <div class="grid grid-cols-2 gap-4 pt-3 mt-3 border-t border-gray-100">
            <div class="text-center">
              <div class="text-lg font-semibold text-gray-900" data-publish-modal-target="totalVersions">0</div>
              <div class="text-xs text-gray-500">Updates published</div>
            </div>
            <div class="text-center">
              <div class="text-sm font-medium text-gray-900" data-publish-modal-target="lastUpdated">â€”</div>
              <div class="text-xs text-gray-500">Last updated</div>
            </div>
          </div>
        </div>
        
        <div class="space-y-3">
          <!-- Production URL -->
          <div class="flex items-center justify-between bg-white rounded-md px-4 py-3 border border-gray-200">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
              </svg>
              <span class="text-sm text-gray-900" data-publish-modal-target="productionUrl">
                <%= app.slug || app.name.parameterize %>.overskill.app
              </span>
            </div>
            <button data-action="click->publish-modal#copyProductionUrl" 
                    class="text-gray-400 hover:text-gray-600"
                    title="Copy URL">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </button>
          </div>
          
          <!-- Custom Domains -->
          <button class="w-full text-left flex items-center space-x-2 text-sm text-gray-600 hover:text-gray-900 px-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            <span>Custom domains</span>
          </button>
        </div>
      </div>
      
      <!-- Security Review (Optional) -->
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-sm text-gray-700">Review Security</span>
            <span class="text-xs text-gray-500">(Free)</span>
          </div>
          <button class="bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out">
            Update
          </button>
        </div>
      </div>
    </div>
    
    <!-- Footer -->
    <div class="px-6 py-4 bg-gray-50 rounded-b-lg flex items-center justify-between text-sm text-gray-600">
      <div class="flex items-center space-x-4">
        <button class="hover:text-gray-900">Invite</button>
        <button class="hover:text-gray-900">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
        </button>
        <button class="hover:text-gray-900">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>
      <button data-action="click->publish-modal#openInNewTab"
              class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-md transition duration-150 ease-in-out">
        Publish
      </button>
    </div>
  </div>
</div>