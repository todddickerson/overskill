<!-- Help Modal -->
<div id="help_modal" 
     class="hidden fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm z-50 flex items-center justify-center lg:animate-fadeIn"
     data-controller="help-modal"
     data-help-modal-target="modal"
     data-action="click->help-modal#closeOnBackdrop">
  
  <div class="bg-white dark:bg-gray-800 rounded-t-2xl lg:rounded-xl shadow-2xl w-full max-w-2xl mx-auto lg:mx-4 lg:animate-slideUp transition-colors duration-200 
              fixed bottom-0 left-0 right-0 lg:relative lg:inset-auto 
              max-h-[85vh] lg:max-h-[90vh] overflow-hidden flex flex-col" data-help-modal-target="content">
    <!-- Header -->
    <div class="px-4 sm:px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between flex-shrink-0">
      <h2 class="text-lg sm:text-xl font-semibold text-gray-900 dark:text-gray-100">Help & Documentation</h2>
      <button data-action="click->help-modal#close" class="text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-colors duration-200 p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
        <svg class="w-5 sm:w-6 h-5 sm:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
    
    <!-- Content -->
    <div class="flex-1 overflow-y-auto px-4 sm:px-6 py-4 sm:py-6 space-y-6">
      <!-- Quick Tips -->
      <div>
        <h3 class="text-base font-medium text-gray-900 dark:text-gray-100 mb-3">Quick Tips</h3>
        <div class="space-y-3">
          <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
            <h4 class="font-medium text-sm text-gray-900 dark:text-gray-100 mb-1">
              <i class="fas fa-magic mr-2 text-primary-600"></i>Using AI Chat
            </h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Describe what you want to build or change in natural language. Be specific about features, design, and functionality.
            </p>
          </div>
          
          <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
            <h4 class="font-medium text-sm text-gray-900 dark:text-gray-100 mb-1">
              <i class="fas fa-code mr-2 text-primary-600"></i>Editing Code
            </h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Click on any file in the Files tab to view and edit code directly. Changes are saved automatically.
            </p>
          </div>
          
          <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
            <h4 class="font-medium text-sm text-gray-900 dark:text-gray-100 mb-1">
              <i class="fas fa-database mr-2 text-primary-600"></i>Database Management
            </h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Use the Dashboard tab to create tables, manage data, and configure your app's database schema.
            </p>
          </div>
          
          <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
            <h4 class="font-medium text-sm text-gray-900 dark:text-gray-100 mb-1">
              <i class="fas fa-rocket mr-2 text-primary-600"></i>Publishing
            </h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Click Publish to deploy your app. Choose between preview (for testing) or production (for live users).
            </p>
          </div>
        </div>
      </div>
      
      <!-- Common Commands -->
      <div>
        <h3 class="text-base font-medium text-gray-900 dark:text-gray-100 mb-3">Common AI Commands</h3>
        <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4 space-y-2">
          <p class="text-sm text-gray-700 dark:text-gray-300">
            <code class="bg-gray-200 dark:bg-gray-600 px-2 py-1 rounded text-xs">"Add a contact form"</code>
          </p>
          <p class="text-sm text-gray-700 dark:text-gray-300">
            <code class="bg-gray-200 dark:bg-gray-600 px-2 py-1 rounded text-xs">"Change the color scheme to blue"</code>
          </p>
          <p class="text-sm text-gray-700 dark:text-gray-300">
            <code class="bg-gray-200 dark:bg-gray-600 px-2 py-1 rounded text-xs">"Make it mobile responsive"</code>
          </p>
          <p class="text-sm text-gray-700 dark:text-gray-300">
            <code class="bg-gray-200 dark:bg-gray-600 px-2 py-1 rounded text-xs">"Add user authentication"</code>
          </p>
          <p class="text-sm text-gray-700 dark:text-gray-300">
            <code class="bg-gray-200 dark:bg-gray-600 px-2 py-1 rounded text-xs">"Create a dashboard with charts"</code>
          </p>
        </div>
      </div>
      
      <!-- Keyboard Shortcuts -->
      <div>
        <h3 class="text-base font-medium text-gray-900 dark:text-gray-100 mb-3">Keyboard Shortcuts</h3>
        <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4 space-y-2">
          <div class="flex justify-between text-sm">
            <span class="text-gray-600 dark:text-gray-400">Toggle Chat Panel</span>
            <kbd class="bg-gray-200 dark:bg-gray-600 px-2 py-1 rounded text-xs">Cmd/Ctrl + K</kbd>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600 dark:text-gray-400">Save File</span>
            <kbd class="bg-gray-200 dark:bg-gray-600 px-2 py-1 rounded text-xs">Cmd/Ctrl + S</kbd>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600 dark:text-gray-400">Search Files</span>
            <kbd class="bg-gray-200 dark:bg-gray-600 px-2 py-1 rounded text-xs">Cmd/Ctrl + P</kbd>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-600 dark:text-gray-400">Refresh Preview</span>
            <kbd class="bg-gray-200 dark:bg-gray-600 px-2 py-1 rounded text-xs">Cmd/Ctrl + R</kbd>
          </div>
        </div>
      </div>
      
      <!-- Need More Help? -->
      <div class="bg-primary-50 dark:bg-primary-900/20 rounded-lg p-4">
        <h3 class="text-base font-medium text-primary-900 dark:text-primary-100 mb-2">Need More Help?</h3>
        <p class="text-sm text-primary-700 dark:text-primary-300 mb-3">
          Our support team is here to help you succeed.
        </p>
        <div class="space-y-2">
          <a href="https://docs.overskill.com" target="_blank" 
             class="flex items-center space-x-2 text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300">
            <i class="fas fa-book"></i>
            <span>Documentation</span>
            <i class="fas fa-external-link-alt text-xs"></i>
          </a>
          <a href="https://discord.gg/overskill" target="_blank" 
             class="flex items-center space-x-2 text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300">
            <i class="fab fa-discord"></i>
            <span>Join our Discord</span>
            <i class="fas fa-external-link-alt text-xs"></i>
          </a>
          <a href="mailto:support@overskill.com" 
             class="flex items-center space-x-2 text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300">
            <i class="fas fa-envelope"></i>
            <span>Email Support</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>