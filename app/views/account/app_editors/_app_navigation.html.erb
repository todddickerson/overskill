<!-- App Navigation Dropdown -->
<div class="relative" data-controller="app-navigation">
  <!-- Trigger Button -->
  <button data-app-navigation-target="trigger"
          data-action="click->app-navigation#toggle"
          class="flex items-center space-x-2 px-2 py-1 rounded-lg hover:bg-gray-700 transition-colors duration-150">
    <!-- App Name -->
    <span class="text-white font-semibold text-sm"><%= @app.name %></span>
    <i class="fas fa-chevron-down text-gray-400 text-xs"></i>
  </button>

  <!-- App Dropdown Panel (Simple) -->
  <div data-app-navigation-target="dropdown"
       class="hidden absolute top-full left-0 mt-2 w-48 bg-white rounded-lg shadow-xl border border-gray-200 z-50">
    
    <!-- App Management Items -->
    <div class="py-2">
      <!-- App Overview -->
      <button data-action="click->app-navigation#openSettings"
              class="w-full flex items-center space-x-3 px-4 py-2 text-left hover:bg-gray-50 transition-colors">
        <i class="fas fa-th-large text-gray-500 w-4"></i>
        <span class="text-sm text-gray-900">App Overview</span>
      </button>

      <!-- Users -->
      <button data-action="click->app-navigation#openSettings"
              class="w-full flex items-center space-x-3 px-4 py-2 text-left hover:bg-gray-50 transition-colors">
        <i class="fas fa-users text-gray-500 w-4"></i>
        <span class="text-sm text-gray-900">Users</span>
      </button>

      <!-- Security -->
      <button data-action="click->app-navigation#openSettings"
              class="w-full flex items-center space-x-3 px-4 py-2 text-left hover:bg-gray-50 transition-colors">
        <i class="fas fa-shield-alt text-gray-500 w-4"></i>
        <span class="text-sm text-gray-900">Security</span>
      </button>

      <!-- App Settings -->
      <button data-action="click->app-navigation#openSettings"
              class="w-full flex items-center space-x-3 px-4 py-2 text-left hover:bg-gray-50 transition-colors">
        <i class="fas fa-cog text-gray-500 w-4"></i>
        <span class="text-sm text-gray-900">App Settings</span>
      </button>
    </div>
  </div>
</div>