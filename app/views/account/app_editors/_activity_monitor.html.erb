<div class="space-y-4">
  <!-- Activity Monitor Header -->
  <div class="flex items-center justify-between mb-4">
    <div>
      <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300">18 entries</h3>
    </div>
    <div class="flex items-center space-x-2">
      <button class="px-3 py-1 text-sm bg-gray-100 dark:bg-gray-700 rounded hover:bg-gray-200 dark:hover:bg-gray-600">
        <i class="fas fa-filter mr-1"></i> All
      </button>
      <button class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
        <i class="fas fa-trash"></i>
      </button>
      <button class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
        <i class="fas fa-times"></i>
      </button>
    </div>
  </div>
  
  <!-- Request Count -->
  <div class="flex items-center space-x-4 text-sm text-gray-600 dark:text-gray-400">
    <span>18 requests</span>
    <span>0 logs</span>
  </div>
  
  <!-- Activity List -->
  <div class="space-y-2">
    <% [
      { method: 'get', path: '/entities/User', time: 'an hour ago', status: 200 },
      { method: 'get', path: '/entities/User', time: 'an hour ago', status: 200 },
      { method: 'get', path: '/entities/User', time: '2 hours ago', status: 200 },
      { method: 'get', path: '/entities/Artwork', time: '2 hours ago', status: 200 },
      { method: 'get', path: '/entities/Artwork', time: '3 hours ago', status: 200 },
      { method: 'get', path: '/entities/Artwork', time: '3 hours ago', status: 200 },
      { method: 'get', path: '/entities/Client', time: '3 hours ago', status: 200 },
      { method: 'get', path: '/entities/Exhibition', time: '3 hours ago', status: 200 },
      { method: 'get', path: '/entities/Artwork', time: '3 hours ago', status: 200 },
      { method: 'get', path: '/integration-endpoints/schema', time: '3 hours ago', status: 200 },
      { method: 'get', path: '/entities/Client', time: '5 hours ago', status: 200 },
      { method: 'get', path: '/entities/Exhibition', time: '5 hours ago', status: 200 },
      { method: 'get', path: '/entities/Artwork', time: '5 hours ago', status: 200 },
      { method: 'get', path: '/integration-endpoints/schema', time: '5 hours ago', status: 200 },
      { method: 'get', path: '/entities/Client', time: '5 hours ago', status: 200 },
      { method: 'get', path: '/entities/Exhibition', time: '5 hours ago', status: 200 },
      { method: 'get', path: '/entities/Artwork', time: '5 hours ago', status: 200 },
      { method: 'get', path: '/integration-endpoints/schema', time: '5 hours ago', status: 200 }
    ].each do |request| %>
      <div class="flex items-center justify-between py-3 px-4 hover:bg-gray-50 dark:hover:bg-gray-700 rounded cursor-pointer">
        <div class="flex items-center space-x-4">
          <span class="text-xs font-mono text-gray-600 dark:text-gray-400 uppercase"><%= request[:method] %></span>
          <span class="text-sm text-gray-900 dark:text-white font-mono"><%= request[:path] %></span>
        </div>
        <div class="flex items-center space-x-4">
          <span class="text-xs text-gray-500 dark:text-gray-400"><%= request[:time] %></span>
          <span class="text-xs font-medium text-green-600 dark:text-green-400">
            <i class="fas fa-check-circle mr-1"></i><%= request[:status] %>
          </span>
          <button class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300">
            <i class="fas fa-chevron-down text-xs"></i>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>