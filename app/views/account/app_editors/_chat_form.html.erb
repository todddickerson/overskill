<%= form_with model: app.app_chat_messages.build, 
              url: create_message_account_app_editor_path(app),
              class: "relative" do |form| %>
  <div class="relative bg-white border border-gray-200 rounded-2xl shadow-sm hover:shadow-md transition-shadow focus-within:shadow-md focus-within:border-blue-300">
    <%= form.text_area :content,
        placeholder: "Tell me what you'd like to change...",
        rows: 1,
        class: "w-full bg-transparent text-gray-900 placeholder-gray-500 border-0 rounded-2xl pl-4 pr-12 py-3 text-sm focus:outline-none focus:ring-0 resize-none",
        data: {
          controller: "autosize",
          action: "keydown.meta+enter->autosize#submit keydown.ctrl+enter->autosize#submit input->autosize#resize"
        } %>
    <button type="submit" 
            class="absolute right-2 top-1/2 -translate-y-1/2 w-8 h-8 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors flex items-center justify-center disabled:opacity-50 disabled:cursor-not-allowed"
            data-autosize-target="submit">
      <i class="fas fa-arrow-up text-sm"></i>
    </button>
  </div>
  
  <div class="flex items-center justify-between mt-2 px-1">
    <div class="flex items-center space-x-4 text-xs text-gray-500">
      <span class="flex items-center">
        <kbd class="px-1.5 py-0.5 bg-gray-100 border border-gray-200 rounded text-xs font-mono">⌘</kbd>
        <span class="mx-1">+</span>
        <kbd class="px-1.5 py-0.5 bg-gray-100 border border-gray-200 rounded text-xs font-mono">↵</kbd>
        <span class="ml-1">to send</span>
      </span>
    </div>
    
    <div class="flex items-center space-x-2">
      <button type="button" 
              class="text-xs text-gray-500 hover:text-gray-700 px-2 py-1 rounded hover:bg-gray-50 transition-colors"
              title="Add attachment">
        <i class="fas fa-paperclip"></i>
      </button>
      <button type="button" 
              class="text-xs text-gray-500 hover:text-gray-700 px-2 py-1 rounded hover:bg-gray-50 transition-colors"
              title="Quick actions">
        <i class="fas fa-magic"></i>
      </button>
    </div>
  </div>
<% end %>