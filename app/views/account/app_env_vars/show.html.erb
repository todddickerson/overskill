<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @app_env_var do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @app_env_var %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @app_env_var, strategy: :label do %>
            <%= render 'shared/attributes/text', attribute: :key %>
            <%= render 'shared/attributes/text', attribute: :value %>
            <%= render 'shared/attributes/text', attribute: :description %>
            <%= render 'shared/attributes/option', attribute: :is_secret %>
            <%= render 'shared/attributes/option', attribute: :is_system %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @app_env_var], class: first_button_primary if can? :edit, @app_env_var %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @app_env_var], method: :delete, class: first_button_primary, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(@app_env_var)) } if can? :destroy, @app_env_var %>
          <%= link_to t('global.buttons.back'), [:account, @app, :app_env_vars], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
