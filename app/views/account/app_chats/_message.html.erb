<div class="flex <%= message.role == 'user' ? 'justify-end' : 'justify-start' %>">
  <div class="max-w-2xl <%= message.role == 'user' ? 'bg-primary-100 text-primary-900' : 'bg-gray-100 text-gray-900' %> rounded-lg px-4 py-2">
    <div class="text-sm font-medium mb-1">
      <%= message.role == 'user' ? 'You' : 'AI Assistant' %>
      <span class="text-xs text-gray-500 ml-2"><%= time_ago_in_words(message.created_at) %> ago</span>
    </div>
    <div class="prose prose-sm max-w-none">
      <%= simple_format(message.content) %>
    </div>
    <% if message.failed? %>
      <div class="mt-2 text-xs text-red-600">
        <i class="fas fa-exclamation-circle"></i> Error occurred
      </div>
    <% end %>
  </div>
</div>