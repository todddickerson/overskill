<% app_security_policies = app_security_policies.accessible_by(current_ability) %>
<% app = @app %>
<% context ||= app %>
<% collection ||= :app_security_policies %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% pagy ||= nil %>
<% pagy, app_security_policies = pagy(app_security_policies, page_param: :app_security_policies_page) unless pagy %>

<%= action_model_select_controller do %>
  <% cable_ready_updates_for context, collection do %>
    <%= render 'account/shared/box', pagy: pagy do |box| %>
      <% box.title t(".contexts.#{context.class.name.underscore}.header") %>
      <% box.description do %>
        <%= t(".contexts.#{context.class.name.underscore}.description#{"_empty" unless app_security_policies.any?}") %>
        <%= render "shared/limits/index", model: app_security_policies.model %>
      <% end %>

      <% box.table do %>
        <% if app_security_policies.any? %>
          <table class="table">
            <thead>
              <tr>
                <%= render "shared/tables/select_all" %>
                <th><%= t('.fields.policy_name.heading') %></th>
                <th><%= t('.fields.policy_type.heading') %></th>
                <th  class="text-center"><%= t('.fields.enabled.heading') %></th>
                <%# ðŸš… super scaffolding will insert new field headers above this line. %>
                <th><%= t('.fields.created_at.heading') %></th>
                <th class="text-right"></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: 'account/app_security_policies/app_security_policy', collection: app_security_policies %>
            </tbody>
          </table>
        <% end %>
      <% end %>

      <% box.actions do %>
        <% unless hide_actions %>
          <% if context == app %>
            <% if can? :create, AppSecurityPolicy.new(app: app) %>
              <%= link_to t('.buttons.new'), [:new, :account, app, :app_security_policy], class: "#{first_button_primary(:app_security_policy)} new" %>
            <% end %>
          <% end %>

          <%# ðŸš… super scaffolding will insert new targets one parent action model buttons above this line. %>
          <%# ðŸš… super scaffolding will insert new bulk action model buttons above this line. %>
          <%= render "shared/bulk_action_select" if app_security_policies.any? %>

          <% unless hide_back %>
            <%= link_to t('global.buttons.back'), [:account, context], class: "#{first_button_primary(:app_security_policy)} back" %>
          <% end %>
        <% end %>
      <% end %>

      <% box.raw_footer do %>
        <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
