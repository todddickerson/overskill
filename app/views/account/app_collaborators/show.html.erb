<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @app_collaborator do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description') %>
          <%= t('.manage_description') if can? :manage, @app_collaborator %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @app_collaborator, strategy: :label do %>
            <%= render 'shared/attributes/option', attribute: :membership %>
            <%= render 'shared/attributes/text', attribute: :role %>
            <%= render 'shared/attributes/text', attribute: :github_username %>
            <%= render 'shared/attributes/option', attribute: :permissions_synced %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @app_collaborator], class: first_button_primary if can? :edit, @app_collaborator %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @app_collaborator], method: :delete, class: first_button_primary, data: { turbo_confirm: t('.buttons.confirmations.destroy', model_locales(@app_collaborator)) } if can? :destroy, @app_collaborator %>
          <%= link_to t('global.buttons.back'), [:account, @app, :app_collaborators], class: first_button_primary %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
