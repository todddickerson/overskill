# OverSkill Environment Variables
# Copy this file to .env and fill in your values

# Rails
RAILS_ENV=development
RAILS_MASTER_KEY=your-master-key-here

# Database (BulletTrain configures these)
DATABASE_URL=postgresql://localhost/overskill_development
REDIS_URL=redis://localhost:6379/0

# AI Services
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_REFERER=https://overskill.app

# Optional AI Fallbacks
DEEPSEEK_API_KEY=
GEMINI_API_KEY=
ANTHROPIC_API_KEY=

# Stripe (BulletTrain includes basic Stripe config)
STRIPE_CONNECT_CLIENT_ID=ca_your-connect-client-id
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Cloudflare
CLOUDFLARE_API_KEY=your-api-key
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret
CLOUDFLARE_R2_BUCKET=overskill-apps
CLOUDFLARE_WORKERS_SUBDOMAIN=overskill

# Supabase (for app data)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Analytics (optional)
PLAUSIBLE_DOMAIN=overskill.app
SENTRY_DSN=https://your-sentry-dsn

# Email (BulletTrain configures these)
SMTP_ADDRESS=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_DOMAIN=overskill.app

# Application Settings
APP_HOST=localhost:3000
FORCE_SSL=false
MINIMUM_APP_PRICE=0
MAXIMUM_APP_PRICE=999
PLATFORM_FEE_PERCENTAGE=15

# Feature Flags
ENABLE_AI_GENERATION=true
ENABLE_MARKETPLACE=true
ENABLE_TEAMS=true
ENABLE_API=false

# Development Only
SKIP_SECURITY_SCAN=false
VERBOSE_AI_LOGGING=true
