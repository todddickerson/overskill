# OverSkill Development Environment
# This file contains non-sensitive development defaults that can be committed to GitHub.
# For sensitive values (API keys, secrets), create a .env.development.local file.

# Rails Environment
RAILS_ENV=development
RAILS_LOG_LEVEL=debug

# Application URLs
APP_HOST=localhost:3000
BASE_URL=http://bsp.ngrok.app
MARKETING_SITE_URL=/account
FORCE_SSL=false

# Database (Local PostgreSQL)
# Note: Developers need to ensure PostgreSQL is running locally
DATABASE_URL=postgresql://localhost/overskill_development
DATABASE_POOL=5

# Redis (Local Redis)
# Note: Developers need to ensure Redis is running locally
REDIS_URL=redis://localhost:6379/0

# Background Jobs
SIDEKIQ_CONCURRENCY=5
SIDEKIQ_TIMEOUT=25

# Email Settings (Letter Opener for local development)
# Emails will open in browser instead of being sent
SMTP_ADDRESS=localhost
SMTP_PORT=1025
SMTP_DOMAIN=localhost

# Application Features (All enabled for development)
ENABLE_AI_GENERATION=true
ENABLE_MARKETPLACE=true
ENABLE_TEAMS=true
ENABLE_API=true

# Platform Settings
MINIMUM_APP_PRICE=0
MAXIMUM_APP_PRICE=999
PLATFORM_FEE_PERCENTAGE=15

# Development Tools
VERBOSE_AI_LOGGING=true
SKIP_SECURITY_SCAN=false
BULLET_ENABLED=true
BROWSER_SYNC=true

# Test/Demo Data
SEED_DEMO_DATA=true
DEMO_USER_EMAIL=demo@example.com
DEMO_USER_PASSWORD=password

# Cache Settings (disabled for development)
CACHE_ENABLED=false
ACTION_CABLE_ALLOWED_REQUEST_ORIGINS=http://localhost:3000

# Asset Settings
ASSETS_DEBUG=true
ASSETS_PRECOMPILE=false

# Feature Development Flags
FEATURE_DARK_MODE=false
FEATURE_TEAMS_LIMIT=unlimited
FEATURE_APP_TEMPLATES=true

# Admin Access
# Set this to your email to access /admin/analytics
SUPER_ADMIN_EMAIL=admin@example.com

# AI Service URLs (Public endpoints, no keys needed here)
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_REFERER=https://overskill.app

# Cloudflare URLs (Public endpoints)
CLOUDFLARE_API_BASE_URL=https://api.cloudflare.com/client/v4
CLOUDFLARE_WORKERS_SUBDOMAIN=overskill-dev

# Supabase Project URL (Public URL only)
# Note: Developers need their own Supabase project for testing
SUPABASE_PROJECT_ID=your-project-id

# Monitoring (Optional for development)
ENABLE_PERFORMANCE_MONITORING=false
LOG_LEVEL=debug

# ==============================================================================
# IMPORTANT: Sensitive values go in .env.development.local
# ==============================================================================
# Create .env.development.local and add your personal API keys there.
# That file is gitignored and won't be committed.
# See .env.development.local for the required variables and instructions.